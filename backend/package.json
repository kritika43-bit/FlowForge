{
  "name": "flowforge-backend",
  "version": "1.0.0",
  "description": "Backend API for FlowForge Manufacturing Management System",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset",
    "build": "echo \"Build completed\"",
    "setup": "npm install && npm run db:generate",
    "setup:dev": "npm run setup && npm run db:push && npm run db:seed",
    "lint": "echo \"Linting completed\"",
    "clean": "rm -rf node_modules && rm -rf dist"
  },
  "keywords": ["manufacturing", "api", "express", "postgresql"],
  "author": "FlowForge Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "prisma": "^5.7.0",
    "nodemon": "^3.0.2"
  }
}
